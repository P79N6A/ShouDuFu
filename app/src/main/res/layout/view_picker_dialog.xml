<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.futuretongfu.ui.component.wheel.DatetimePickerView
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn_right_bg"
            android:text="取消"
            android:textColor="@drawable/dialog_btn_text_selector"
            android:textSize="18sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff7f7f7" />

        <Button
            android:id="@+id/today_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn_left_bg"
            android:text="今天"
            android:textColor="@drawable/dialog_btn_text_selector"
            android:textSize="18sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#fff7f7f7" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn_center_bg"
            android:text="确定"
            android:textColor="@drawable/dialog_btn_text_selector"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>