<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15">

    <ImageView
        android:id="@+id/img_item_shopchildren_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_item_shopchildren_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp_10"
            android:text="雅诗兰黛雅诗兰黛雅诗兰黛雅诗兰黛雅诗兰黛雅诗兰黛雅诗兰黛雅诗兰黛"
            android:textColor="@color/text_color_black"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_item_shopchildren_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:text="规格"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_color_gray"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_shopchildren_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="67.00"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_item_shopchildren_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="*1"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>
</LinearLayout>