<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/image_tranfer_account_head"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/icon_head_2" />

        <TextView
            android:id="@+id/tv_tranfer_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="--"
            android:textColor="@color/colorDefaultBlack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_tranfer_account_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="7dp"
            android:text="--"
            android:textColor="@color/front_s7"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="19dp"
            android:text="转账金额(元)"
            android:textColor="@color/front_s7"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iocn_price" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_tranfer_account_input_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="9" />

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginTop="22dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_tranfer_account_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="备注(40字以内)"
            android:imeOptions="actionDone"
            android:maxLength="40"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/colorDefaultBlack"
            android:textColorHint="@color/colorDefaultBlack"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tranfer_account_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_corner_blue"
        android:enabled="false"
        android:gravity="center"
        android:text="确认转账"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台金额："
            android:textColor="@color/colorDefaultBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tranfer_account_have_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="@color/front_s8"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>