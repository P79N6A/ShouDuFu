<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray2"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_asaledetails_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text_color_red"/>
        <TextView
            android:id="@+id/tv_asaledetails_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/text_color_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_white"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款总金额"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_14"/>
        <TextView
            android:id="@+id/tv_asaledetails_payprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/dp_14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/main_white"
        android:visibility="gone"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_asaledetails_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退回原支付渠道"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_14"/>
        <TextView
            android:id="@+id/tv_asaledetails_methodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/dp_14"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退款信息"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color_black"
        android:padding="@dimen/dp_15"
        android:background="@color/main_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_gray2"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <ImageView
            android:id="@+id/img_good_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/tv_good_price"
            android:layout_toRightOf="@id/img_good_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_good_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_good_name"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_good_image"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_color_red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_good_price"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_red"
            android:textSize="13sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_white"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_asaledetails_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/text_color_gray"
            android:text=""/>
        <TextView
            android:id="@+id/tv_asaledetails_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/text_color_gray"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""/>
        <TextView
            android:id="@+id/tv_asaledetails_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/text_color_gray"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""/>
        <TextView
            android:id="@+id/tv_asaledetails_orderno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/text_color_gray"
            android:layout_marginTop="@dimen/dp_5"
            android:text=""/>

    </LinearLayout>

</LinearLayout>
