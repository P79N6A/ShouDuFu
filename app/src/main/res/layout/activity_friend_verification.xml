<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="主动添加对方为好友，对方将在好友申请中看到你的真实名字"
        android:textColor="@color/color_666666"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_friend_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证消息"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:text=""
            android:maxLength="10"
            android:textColor="@color/colorDefaultBlack"
            android:textColorHint="@color/front_s7"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_friend_verification_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close_3"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>