<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="@mipmap/icon_price_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:gravity="center"
                    android:text="优惠:系统将返与消费总额等量的通贝"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_payment_order_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="七天连锁酒店"
                        android:textColor="@color/cr_5"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_payment_order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="￥450.00"
                        android:textColor="@color/colorOrange"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_payment_order_weixin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:textColor="@color/colorDefaultBlack"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/image_payment_order_weixin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/choice_nor" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_payment_order_alipay"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付宝"
                    android:textColor="@color/colorDefaultBlack"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/image_payment_order_alipay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/choice_pre" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <LinearLayout
                android:id="@+id/ll_payment_order_more_pay_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/item_selector"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看更多支付方式"
                    android:textColor="@color/front_s7"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/image_payment_order_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_spread" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_payment_order_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_btn_blue"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>