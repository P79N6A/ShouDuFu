<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgv_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:riv_border_width="0dip"
        app:riv_corner_radius="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgv_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="name"
            android:textColor="@color/front_s5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_recommend_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135****4407"
            android:textColor="@color/front_s7"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_below="@id/imgv_photo" />

</RelativeLayout>