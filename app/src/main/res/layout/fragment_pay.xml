<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_red"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_bar_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="支付"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/title_text_size" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fpay_saoyisao"
                style="@style/textview_top"
                android:drawableTop="@mipmap/icon_richscan"
                android:text="扫一扫" />

            <TextView
                android:id="@+id/tv_fpay_zhuanzhang"
                style="@style/textview_top"
                android:drawableTop="@mipmap/icon_transfer"
                android:text="转账" />

            <TextView
                android:id="@+id/tv_fpay_chongzhi"
                style="@style/textview_top"
                android:drawableTop="@mipmap/icon_recharge_3"
                android:text="充值" />

            <TextView
                android:id="@+id/tv_fpay_shoukuanma"
                style="@style/textview_top"
                android:drawableTop="@mipmap/icon_zhifu_erweima"
                android:text="收款码" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/dp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fpay_contacts"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_pay_add_friend_address"
            android:text="通讯录" />

        <View
            android:id="@+id/remark_num"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_friend_oval_red_bg"
            android:padding="3dp" />
    </RelativeLayout>

    <View style="@style/Divider" />

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fpay_zengzhi"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_pay_consumption"
            android:text="消费增值" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_fpay_zhangdan"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_pay_bill"
            android:text="账单" />
    </LinearLayout>

    <View style="@style/Divider" />

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fpay_yue"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_balance_paid"
            android:text="余额" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/dp_15" />
        <TextView
            android:id="@+id/tv_fpay_recommendationj"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_tuijianjiangs"
            android:text="推荐奖" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_fpay_tongbao"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_pay_tongbao"
            android:text="通宝" />

        <View
            style="@style/Divider"
            android:layout_marginLeft="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_fpay_jifen"
            style="@style/textview_right"
            android:drawableLeft="@mipmap/icon_pay_tongbei"
            android:text="通贝" />
    </LinearLayout>

    <View style="@style/Divider" />

    <View
        style="@style/Divider"
        android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/tv_fpay_card"
        style="@style/textview_right"
        android:drawableLeft="@mipmap/icon_bank_card"
        android:text="银行卡" />

    <View style="@style/Divider" />
</LinearLayout>
</ScrollView>