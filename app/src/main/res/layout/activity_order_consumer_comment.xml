<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.activity.order.OrderConsumerCommentActivity">

    <include
        layout="@layout/layout_common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imgv_pic"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    android:src="@drawable/fynn_prompt_dialog_btn_center_pressed"/>

                <TextView
                    android:id="@+id/text_sorce_title"
                    android:text="评分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/colorDefaultBlack"
                    android:layout_toRightOf="@id/imgv_pic"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

                <ImageView
                    android:id="@+id/imgv_start_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sorce_title"
                    android:layout_toRightOf="@id/imgv_pic"
                    android:layout_marginLeft="11dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/selector_starts_selector"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/imgv_start_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sorce_title"
                    android:layout_toRightOf="@id/imgv_start_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/selector_starts_selector"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/imgv_start_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sorce_title"
                    android:layout_toRightOf="@id/imgv_start_2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/selector_starts_selector"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/imgv_start_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sorce_title"
                    android:layout_toRightOf="@id/imgv_start_3"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/selector_starts_selector"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/imgv_start_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sorce_title"
                    android:layout_toRightOf="@id/imgv_start_4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/selector_starts_selector"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"/>

            </RelativeLayout>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_share"
                android:hint="分享您的购物心得"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@null"
                android:textColorHint="@color/colorTextNormalLight"
                android:textSize="14dp"
                android:textColor="@color/colorMiddleGray"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:maxLength="240"
                android:scrollbars="vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="18dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgv_photo_1"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@mipmap/icon_comera"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        app:riv_corner_radius="2dp"
                        app:riv_border_width="1dip"
                        app:riv_border_color="@color/colorBg"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/imgv_close_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_close_3"
                        android:layout_gravity="right"
                        android:visibility="gone"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="18dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgv_photo_2"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@mipmap/icon_comera"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        app:riv_corner_radius="2dp"
                        app:riv_border_width="1dip"
                        app:riv_border_color="@color/colorBg"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgv_close_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_close_3"
                        android:layout_gravity="right"
                        android:visibility="gone"/>

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="18dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgv_photo_3"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@mipmap/icon_comera"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="center"
                        app:riv_corner_radius="2dp"
                        app:riv_border_width="1dip"
                        app:riv_border_color="@color/colorBg"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgv_close_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_close_3"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
