<?xml version="1.0" encoding="utf-8"?>
<com.futuretongfu.ui.component.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/ll_onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <CheckBox
            android:id="@+id/cb_item_shopchildren_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/checkbox_selector"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/img_item_shopchildren_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@color/text_color_orange"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_item_shopchildren_ccovergoods"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="#B3cccccc"
                android:gravity="center"
                android:text="下架"
                android:textColor="@color/text_color_white"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_shopchildren_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_color_black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shopchildren_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67.00"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_item_shopchildren_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_2"
                android:lines="1"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_shopchildren_reduce"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle_gray"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_shopchildren_num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_shopchildren_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/text_angle_right"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="61dp"
        android:layout_height="match_parent"
        android:background="#44a8a8"
        android:text="删除"
        android:gravity="center"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/colorWhite"
        android:clickable="true"/>
</com.futuretongfu.ui.component.SwipeMenuLayout>