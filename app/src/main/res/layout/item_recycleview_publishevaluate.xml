<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white"
    android:orientation="vertical"
    android:padding="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_goods_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述相符"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_13"/>
        <com.futuretongfu.view.MyRatingBar
            android:id="@+id/rb_goodsevaluate_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            app:starCount="5"
            app:starEmpty="@mipmap/unstar"
            app:starFill="@mipmap/star"
            app:starHalf="@mipmap/unstar"
            app:starImageSize="14dp"
            app:starStep="5"
            app:stepSize="Half"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_goods_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="top"
        android:hint="宝贝满足您的期待吗？写下您的购物心得，分享给想买他的亲们"
        android:lines="3"
        android:padding="@dimen/dp_5"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/text_color_gray"
        android:layout_marginTop="7dp"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:visibility="gone"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgv_photo_1"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@mipmap/icon_update_default_bg"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/icon_comera" />

            <ImageView
                android:id="@+id/imgv_close_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/icon_close_3"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgv_photo_2"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:clickable="true"
                android:scaleType="center"
                android:background="@mipmap/icon_update_default_bg"
                android:src="@mipmap/icon_comera"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgv_close_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/icon_close_3"
                android:visibility="gone" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgv_photo_3"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:background="@mipmap/icon_update_default_bg"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/icon_comera"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgv_close_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/icon_close_3"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>
</LinearLayout>