<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:text="请选择类型"
            android:textColor="@color/colorDefaultBlack"
            android:textSize="@dimen/content_text_size"/>

        <ImageView
            android:id="@+id/imgv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="18dp"
            android:src="@mipmap/icon_close_2"/>

    </FrameLayout>

    <View
        style="@style/Divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp">

        <!--<TextView-->
        <!--android:id="@+id/text_all"-->
        <!--android:text="全部"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:paddingTop="24dp"-->
        <!--android:paddingBottom="24dp"-->
        <!--android:layout_marginLeft="4dp"-->
        <!--android:layout_marginRight="4dp"-->
        <!--android:gravity="center"-->
        <!--android:textSize="@dimen/content_text_size"-->
        <!--android:textColor="@drawable/selector_text_color_while_black"-->
        <!--android:background="@drawable/selector_view_selector_corner_blue_white"-->
        <!--android:clickable="true" />-->

        <TextView
            android:id="@+id/text_payment_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/selector_view_selector_corner_blue_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="支付余额"
            android:textColor="@drawable/selector_text_color_while_black"
            android:textSize="@dimen/content_text_size"/>

        <TextView
            android:id="@+id/text_f_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/selector_view_selector_corner_blue_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="@string/jifen_f"
            android:textColor="@drawable/selector_text_color_while_black"
            android:textSize="@dimen/content_text_size"/>

        <TextView
            android:id="@+id/text_f_mall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/selector_view_selector_corner_blue_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            android:text="@string/wlsq_mall"
            android:textColor="@drawable/selector_text_color_while_black"
            android:textSize="@dimen/content_text_size"/>

    </LinearLayout>

</LinearLayout>