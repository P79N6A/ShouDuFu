<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text_business_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_user"
                android:layout_marginTop="@dimen/text_margin_user"
                android:background="@null"
                android:hint="输入需要修改的店铺地址（可选）"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorMiddleGray"
                android:textColorHint="@color/colorLightGray"
                android:textSize="@dimen/content_text_size"/>

            <View style="@style/Divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家logo（可选）"
                android:layout_marginTop="@dimen/text_margin_user"
                android:textColor="@color/colorMiddleGray"
                android:textSize="@dimen/content_text_size"/>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="@dimen/text_margin_user"
                android:layout_marginTop="@dimen/text_margin_user"
                android:background="@drawable/shape_corner_hollow_gray"
                android:clickable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_addition_2"
                    />

                <ImageView
                    android:id="@+id/imgv_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/close_logo_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/icon_close_3"
                    android:visibility="gone"/>

            </RelativeLayout>
            <View style="@style/Divider"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_user"
                android:text="商家照片（可选）"
                android:textColor="@color/colorMiddleGray"
                android:textSize="@dimen/content_text_size"/>

            <RelativeLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="@dimen/text_margin_user"
                android:layout_marginTop="@dimen/text_margin_user"
                android:background="@drawable/shape_corner_hollow_gray">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_addition_2"
                    />

                <ImageView
                    android:id="@+id/iamge_store_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/close_store_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    android:src="@mipmap/icon_close_3"/>
            </RelativeLayout>

            <View style="@style/Divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片管理（可选）"
                android:layout_marginTop="@dimen/text_margin_user"
                android:textColor="@color/colorMiddleGray"
                android:textSize="@dimen/content_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginTop="@dimen/text_margin_user"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_hollow_gray">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_addition_2"
                        />

                    <ImageView
                        android:id="@+id/image_pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        />

                    <ImageView
                        android:id="@+id/close_pic_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/icon_close_3"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_hollow_gray">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_addition_2"
                        />

                    <ImageView
                        android:id="@+id/image_pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        />

                    <ImageView
                        android:id="@+id/close_pic_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/icon_close_3"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_hollow_gray">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_addition_2"
                        />

                    <ImageView
                        android:id="@+id/image_pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        />

                    <ImageView
                        android:id="@+id/close_pic_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/icon_close_3"
                        android:visibility="gone"/>


                </RelativeLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/selector_btn_corner_blue"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
