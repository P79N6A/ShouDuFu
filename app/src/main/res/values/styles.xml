        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/shape_rect_commit</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>
    <!-- 注册编辑框-->
    <style name="edittext_textinput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_edittext</item>
        <item name="android:textColorHint">@color/text_color_edittexthint</item>
    </style>

    <style name="linearlayout_person">
        <item name="android:layout_width">wrap_content</item>
