<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/segment_pre" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/segment_pre" />
            <solid android:color="@color/segment_no" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>

</selector>